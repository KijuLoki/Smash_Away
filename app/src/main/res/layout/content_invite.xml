<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_invite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="smashaway.goldenwork.com.smashaway.InviteActivity"
    tools:showIn="@layout/app_bar_invite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#00111111"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_logo"
            android:alpha="0.2"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:textColor="@color/colorGrey1"
            android:textSize="17dp"
            android:textStyle="bold"
            android:text="Friend suggestions"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="10dp"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerview"></android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/txt_more"
            android:textColor="@color/colorBlueText"
            android:textSize="17dp"
            android:text="more..."
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp">
            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:iiv_color="@color/colorFacebook"
                app:iiv_icon="cmd-facebook"
                android:id="@+id/type_icon5"
                app:iiv_size="40dp"/>
            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:iiv_color="@color/colorTwitter"
                app:iiv_icon="cmd-twitter"
                android:id="@+id/type_icon6"
                app:iiv_size="40dp"/>
            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:iiv_color="@color/colorLinkedin"
                app:iiv_icon="cmd-linkedin"
                android:id="@+id/type_icon7"
                app:iiv_size="40dp"/>
            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:iiv_color="@color/colormail"
                app:iiv_icon="cmd-email-outline"
                android:id="@+id/type_icon8"
                app:iiv_size="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Friends name / email"
                android:layout_weight="8"
                android:inputType="number"
                android:textSize="17dp"/>
            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:iiv_color="@color/colorsendmail"
                app:iiv_icon="cmd-cube-send"
                android:id="@+id/type_icon9"
                app:iiv_size="60dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alternatively, try the "
                android:textSize="16dp"
                android:textColor="@color/colorWhite"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/tvalternative"/>

        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
