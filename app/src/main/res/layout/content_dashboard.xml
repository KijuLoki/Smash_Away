<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="smashaway.goldenwork.com.smashaway.DashboardActivity"
    tools:showIn="@layout/app_bar_dashboard"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#00111111"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_logo"
            android:alpha="0.2"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
            >
    <com.google.android.flexbox.FlexboxLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        app:flexWrap="wrap"
       app:alignItems="center"
        app:alignContent="space_between"
        app:justifyContent="center"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:layout_flexBasisPercent="27%"
            android:orientation="vertical"
            android:background="@color/clo1"
            android:id="@+id/q1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Referals active"
                android:layout_weight="31"
                android:gravity="center"
                android:typeface="monospace"
                android:textSize="11dp"
                android:id="@+id/t1"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="7 / 10"
                android:layout_weight="3"
                android:gravity="center"
                android:textStyle="bold"
                android:typeface="monospace"
                android:id="@+id/t12"
                android:layout_marginTop="10sp"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:layout_flexBasisPercent="27%"
            android:orientation="vertical"
            android:background="@color/clo2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/q2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Shares in profit"
                android:layout_weight="3"
                android:gravity="center"
                android:typeface="monospace"
                android:textSize="11dp"
                android:id="@+id/t2"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="34 567"
                android:layout_weight="3"
                android:gravity="center"
                android:textStyle="bold"
                android:typeface="monospace"
                android:id="@+id/t22"
                android:layout_marginTop="10sp"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:layout_flexBasisPercent="27%"
            android:orientation="vertical"
            android:background="@color/clo3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/q3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Pledge pool"
                android:layout_weight="3"
                android:gravity="center"
                android:typeface="monospace"
                android:textSize="11dp"
                android:id="@+id/t3"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="120"
                android:layout_weight="3"
                android:gravity="center"
                android:textStyle="bold"
                android:typeface="monospace"
                android:id="@+id/t33"
                android:layout_marginTop="10sp"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"/>
        </LinearLayout>



    </com.google.android.flexbox.FlexboxLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latest pool claims"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorGrey"
            android:layout_marginTop="20dp"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerview"></android.support.v7.widget.RecyclerView>



        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"/>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
