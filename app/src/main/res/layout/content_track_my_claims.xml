<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_track_my_claims"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="smashaway.goldenwork.com.smashaway.TrackMyClaimsActivity"
    tools:showIn="@layout/app_bar_track_my_claims">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#00111111"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_logo"
            android:alpha="0.2"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left"
                android:background="@drawable/borderlines"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/head1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:layout_weight="6"
                    android:gravity="center_vertical">
                <TextView
                    android:id="@+id/lblListHeader1a"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Stolen phone"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/list_details_size"/>
                    <TextView
                        android:id="@+id/lblListHeader1b"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="18 February 2017"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorGrey1"
                        android:textSize="@dimen/list_details_size"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center">
                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        app:iiv_color="@color/colorBlack"
                        app:iiv_icon="cmd-chevron-down"
                        android:id="@+id/house_icon1"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left"
                android:background="@drawable/borderlines"
                android:padding="10dp"
                android:id="@+id/sub10">

                <TextView
                    android:id="@+id/lblListHeader10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Status: Paid out to you"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_weight="6"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/list_details_size"
                    android:layout_marginLeft="10dp"/>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:gravity="center">
                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        app:iiv_color="@color/colorBlueText"
                        app:iiv_icon="cmd-currency-usd"
                        android:id="@+id/house_icon10"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left"
                android:background="@drawable/borderlines"
                android:padding="10dp"
                android:id="@+id/sub11">

                <TextView
                    android:id="@+id/lblListHeader11"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Amount: R10 500"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_weight="6"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/list_details_size"
                    android:layout_marginLeft="10dp"/>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:gravity="center">
                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:iiv_color="@color/colorBlueText"
                        app:iiv_icon="cmd-currency-usd"
                        android:id="@+id/house_icon11"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left"
                android:background="@drawable/borderlines"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/head2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:layout_weight="6"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/lblListHeader20"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Lightning damage: Various items"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"

                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/list_details_size"/>
                    <TextView
                        android:id="@+id/lblListHeader21"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="14 October 2016"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/colorGrey1"
                        android:textSize="@dimen/list_details_size"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center">
                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        app:iiv_color="@color/colorBlack"
                        app:iiv_icon="cmd-chevron-down"
                        android:id="@+id/house_icon2"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/borderlines"
                android:id="@+id/head3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:layout_weight="6"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/lblListHeader30"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Lightning damage: Various items"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/list_details_size"/>

                    <TextView
                        android:id="@+id/lblListHeader31"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="14 October 2016"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/colorGrey1"
                        android:textSize="@dimen/list_details_size"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center">
                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        app:iiv_color="@color/colorBlack"
                        app:iiv_icon="cmd-chevron-down"
                        android:id="@+id/house_icon3"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
